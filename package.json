{
  "name": "echocode",
  "displayName": "EchoCode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sdourte/EchoCode.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "echocode",
          "title": "EchoCode",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "echocode": [
        {
          "id": "soundExplorer",
          "name": "Sound Shortcuts",
          "icon": "media/icon.svg"
        },
        {
          "id": "runSounds",
          "name": "Run Sounds",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "echocode.start",
        "title": "Start EchoCode"
      },
      {
        "command": "echocode.toggleEnabled",
        "title": "Activer/D√©sactiver le son",
        "when": "viewItem == soundExplorer",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.increaseVolume",
        "title": "Augmenter le volume",
        "when": "viewItem == soundExplorer",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.decreaseVolume",
        "title": "Diminuer le volume",
        "when": "viewItem == soundExplorer",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.changeSound",
        "title": "Changer le fichier son",
        "when": "viewItem == soundExplorer",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.addShortcut",
        "title": "+ Ajouter un raccourci",
        "when": "viewItem == soundExplorer",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.removeShortcut",
        "title": "Supprimer le raccourci",
        "when": "viewItem == soundExplorer",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.importSound",
        "title": "üìÅ Importer un fichier son",
        "category": "Sound Shortcut"
      },
      {
        "command": "echocode.playRunSound",
        "title": "Jouer un son post-run",
        "category": "Run Sound"
      },
      {
        "command": "echocode.increaseRunVolume",
        "title": "Augmenter le volume post-run",
        "category": "Run Sound"
      },
      {
        "command": "echocode.decreaseRunVolume",
        "title": "Diminuer le volume post-run",
        "category": "Run Sound"
      },
      {
        "command": "echocode.toggleRunSound",
        "title": "Activer/D√©sactiver le son post-run",
        "category": "Run Sound"
      },
      {
        "command": "echocode.changeRunSound",
        "title": "Changer le fichier son post-run",
        "category": "Run Sound"
      },
      { "command": "echocode.shortcut.ctrla", "title": "Shortcut CTRL+A" },
      { "command": "echocode.shortcut.ctrlz", "title": "Shortcut CTRL+Z" },
      { "command": "echocode.shortcut.ctrly", "title": "Shortcut CTRL+Y" },
      { "command": "echocode.shortcut.ctrlc", "title": "Shortcut CTRL+C" },
      { "command": "echocode.shortcut.ctrlv", "title": "Shortcut CTRL+V" },
      { "command": "echocode.shortcut.ctrlx", "title": "Shortcut CTRL+X" },
      { "command": "echocode.shortcut.ctrlf", "title": "Shortcut CTRL+F" },
      { "command": "echocode.shortcut.ctrls", "title": "Shortcut CTRL+S" },
      { "command": "echocode.shortcut.ctrlp", "title": "Shortcut CTRL+P" },
      { "command": "echocode.shortcut.ctrln", "title": "Shortcut CTRL+N" }
    ],
    "keybindings": [
      {
        "key": "ctrl+c",
        "command": "echocode.shortcut.ctrlc",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+v",
        "command": "echocode.shortcut.ctrlv",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+x",
        "command": "echocode.shortcut.ctrlx",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+z",
        "command": "echocode.shortcut.ctrlz",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+y",
        "command": "echocode.shortcut.ctrly",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+a",
        "command": "echocode.shortcut.ctrla",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+f",
        "command": "echocode.shortcut.ctrlf",
        "when": "editorTextFocus || findWidgetVisible && !replaceWidgetVisible && !searchViewletVisible && !inQuickOpen && !inputFocus"
      },
      {
        "key": "ctrl+s",
        "command": "echocode.shortcut.ctrls",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+p",
        "command": "echocode.shortcut.ctrlp",
        "when": "!inQuickOpen && !inputFocus && !searchViewletVisible && !replaceWidgetVisible && !findWidgetVisible && !treeItemFocused && !treeItemHasChildFocused && !treeItemHasParentFocused && !treeItemHasSiblingFocused && !treeItemHasChildOrParentFocused && !treeItemHasSiblingOrParentFocused && !treeItemHasSiblingOrChildFocused"
      },
      {
        "key": "ctrl+n",
        "command": "echocode.shortcut.ctrln",
        "when": "!inQuickOpen && !inputFocus && !searchViewletVisible && !replaceWidgetVisible && !findWidgetVisible"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "when": "view == soundExplorer && viewItem == soundItem",
          "command": "echocode.toggleEnabled",
          "group": "inline"
        },
        {
          "when": "view == soundExplorer && viewItem == soundItem",
          "command": "echocode.changeSound",
          "group": "mod"
        },
        {
          "when": "view == soundExplorer && viewItem == soundItem",
          "command": "echocode.removeShortcut",
          "group": "mod"
        },
        {
          "when": "view == runSounds && viewItem == runSoundItem",
          "command": "echocode.toggleRunSound",
          "group": "inline"
        },
        {
          "when": "view == runSounds && viewItem == runSoundItem",
          "command": "echocode.changeRunSound",
          "group": "mod"
        }
      ],
      "view/title": [
        {
          "command": "echocode.importSound",
          "when": "view == soundExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "copy:data": "npx cpy src/data/**/* out/data --parents",
    "update:keybindings": "node out/scripts/updateKeybindings.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy:data && npm run update:keybindings",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.25.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "play-sound": "^1.1.6"
  }
}